{
  "extends": ["react-app", "plugin:prettier/recommended"],
  "plugins": ["mocha"],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "react/prop-types": "error",
    "no-unused-vars": [
      "error",
      { "args": "after-used", "argsIgnorePattern": "__" }
    ],
    "prettier/prettier": ["error", { "singleQuote": true }]
  }
}
